@model CategoryRequestPageVM
<form asp-controller ="Category" asp-action="CreateCategory"method="post" class="form">
    <div class="mb-3">
        <label class="form-label">Kategori ismi</label>
        <input asp-for="Category.CategoryName" class="form-control" />

    </div>
    <div class="mb-3">
        <label class="form-label">Açıklama</label>
        <textarea asp-for="Category.Description" class="form-control" rows="3"></textarea>

    </div>
    <button class="btn btn-primary">Ekle</button>
</form>