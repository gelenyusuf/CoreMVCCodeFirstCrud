@model CategorySharedPageVm


<form asp-controller="Category" asp-action="UpdateCategory" method="post" class="form">
    <input type="hidden" asp-for="@Model.Category.ID" />
    <div class="mb-3">
        <label class="form-label">Kategori ismi</label>
        <input asp-for="Category.CategoryName" class="form-control" />

    </div>
    <div class="mb-3">
        <label class="form-label">Açıklama</label>
        <textarea asp-for="Category.Description" class="form-control" rows="3"></textarea>

    </div>
    <button class="btn btn-primary">Güncelle</button>
</form>
