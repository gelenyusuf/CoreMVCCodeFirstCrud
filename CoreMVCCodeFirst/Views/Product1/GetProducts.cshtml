@model ProductPageVM

<h3>Yeni bir ürün eklemek için <a asp-controller="Product1" asp-action="GetProducts">tıklayınız.</a></h3>
<table class="table table-hover">
    <thead>
        <tr>
            <td>Id</td>
            <td>Ürün İsmi</td>
            <td>Fiyatı</td>
            <td>Kategorisi</td>
        </tr>
    </thead>
    <tbody>
        
        @foreach (Product item in Model.Products)
        {   
            <tr>
            <td>@item.Id</td>
            <td>@item.ProductName</td>
            <td>@item.UnitPrice</td>
            <td>@item.Category.CategoryName</td>
            <td><a asp-controller="Product1" asp-action="UpdateProduct" asp-route="@item.Id"class="btn btn-warning">Güncelle</a></td>
            <td><a asp-controller="Product1" asp-action="DeleteProduct" asp-route="@item.Id" class="btn btn-danger">Sil</a></td>
            </tr>
        }

    </tbody>
</table>